{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "check-types": {
        "dependsOn": ["build"]
      },
      "@elizaos/agent#check-types": {
        "dependsOn": [
          "@elizaos/plugin-solana#build",
          "@elizaos/plugin-direct#build",
          "@elizaos-plugins/plugin-sanity#build"
        ]
      },
      "build": {
        "outputs": ["dist/**"],
        "dependsOn": ["^build"] 
      },
      "@elizaos/client#build": {
        "outputs": ["dist/**"],
        "dependsOn": [
          "@elizaos-plugins/plugin-sanity#build",
          "@elizaos/core#build"
        ]
      },
      "@elizaos/client-direct#build": {
        "outputs": ["dist/**"],
        "dependsOn": [
          "@elizaos-plugins/plugin-sanity#build"
        ]
      },
      "eliza-docs#build": {
        "outputs": ["build/**"]
      },
      "dev": {
        "persistent": true,
        "cache": true
      }
    }
  }